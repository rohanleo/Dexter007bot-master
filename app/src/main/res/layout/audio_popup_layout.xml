<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/record_button_dialog"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_mic_black_24dp" />

    <ImageView
        android:id="@+id/play_button_dialog"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/record_button_dialog"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:src="@drawable/ic_play_arrow_black_24dp" />

    <Button
        android:id="@+id/record_dialog_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fbutton:cornerRadius="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/record_button_text"
        android:text="Back" />

    <Button
        android:id="@+id/record_dialog_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fbutton:cornerRadius="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/record_button_text"
        android:text="Okay" />

    <TextView
        android:id="@+id/record_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/record_button_dialog"
        android:layout_centerHorizontal="true"
        android:text="Record"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/record_button_dialog"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:textColor="#008577"
        android:textSize="25sp" />

</RelativeLayout>